{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"no-tabs": "off",
		"react/jsx-indent": [2, "tab"],
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": ["craco.config.js", "src/__tests__/**"],
				"optionalDependencies": false,
				"peerDependencies": false,
				"bundledDependencies": false
			}
		],
		"no-plusplus": "off",
		"no-debugger": "warn",
		"no-unused-vars": "warn",
		"react/prop-types": [1],
		"import/prefer-default-export": "off"
	}
}
